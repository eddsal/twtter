
{% extends 'layout.html.twig' %}
{% block content %}

<div class="wrapper">
	<!-- header wrapper -->
<div class="header-wrapper">

<div class="nav-container">
	<!-- Nav -->
	<div class="nav">
		<div class="nav-left">
			<ul>
				<li><a href="?action=profile"><i class="fa fa-home" aria-hidden="true"></i>Home</a></li>
				<li><a href="i/notifications"><i class="fa fa-bell" aria-hidden="true"></i>Notification</a></li>
				<li><i class="fa fa-envelope" aria-hidden="true"></i>Messages</li>
				<script src="assets/javascript/search.js"></script> 
			</ul>
		</div>
		<!-- nav left ends-->
		<div class="nav-right">
			<ul>
				<li><input type="text" placeholder="Search" class="searchm"/>
				<i class="fa fa-search" aria-hidden="true"></i>
				<div class="search-result">
				
					 			
				</div></li>
				<li class="hover"><label class="drop-label" for="drop-wrap1"><img src="{{profileImage}}"/></label>
				<input type="checkbox" id="drop-wrap1">
				<div class="drop-wrap">
					<div class="drop-inner">
						<ul>    
							<li><a href="#">{{ screenName }}</a></li>
							<li><a href="?action=settings">Settings</a></li>
							<li><a href="?action=logout">Log out</a></li>
						</ul>
					</div>
				</div>
				</li>
				<li><label for="pop-up-tweet" class="addTweetBtn">Tweet</label></li>
			</ul>
		</div>
		<!-- nav right ends-->
	</div>
	<!-- nav ends -->
</div>
<!-- nav container ends -->
</div>
<!-- header wrapper end -->

 	
<div class="profile-cover-wrap"> 
	<div class="profile-cover-inner">
		<div class="profile-cover-img">
			<img src="{{search.profileCover}}"/>
		</div>
	</div>
	<div class="profile-nav">
		<div class="profile-navigation">
			<ul>
				<li>
					<a href="#">
						<div class="n-head">
							TWEETS
						</div>
						<div class="n-bottom">
							{{search.Tweet}}
						</div>
					</a>
				</li>
				 <li>
					<a href="/following">
						<div class="n-head">
							FOLLOWING
						</div>
						<div class="n-bottom">
							<span class="count-following">{{seacrh.following}}</span>
						</div>
					</a>
				</li>
				<li>
		    	 <a href="/followers">
					<div class="n-head">
						FOLLOWERS
					</div>
					<div class="n-bottom">
						<span class="count-followers">{{search.folowers}}</span>
					</div>
				</a>
				</li>
				<li>
				<a href="#">
					<div class="n-head">
						LIKES
					</div>
					<div class="n-bottom">
						{{search.likes}}
					</div>
				</a>
				</li>
			</ul>
			<div class="edit-button">
				<span>
	              <button class="f-btn follow-btn"  data-follow="user_id" data-user="user_id"><i class="fa fa-user-plus"></i> Follow </button>     
				   
				</span>
			</div>
		</div>
	</div>
</div>
<!--Profile Cover End-->

<!---Inner wrapper-->
<div class="in-wrapper">
	<div class="in-full-wrap">
		<div class="in-left">
			<div class="in-left-wrap">

			<!--PROFILE INFO WRAPPER END-->
			<div class="profile-info-wrap">
				<div class="profile-info-inner">
					<div class="profile-img">
					{# {% for results in result %} #}
						<img src="{{search.profileImage}}"/>
					{# {% endfor %} #}
					</div>	
					<div class="profile-name-wrap">
						<div class="profile-name">
							<a href="#">{{search.screenName}}</a>
						</div>
						<div class="profile-tname">
							@<span class="username">{{search.screenName}}</span>
						</div>
					</div>
					<div class="profile-bio-wrap">
						<div class="profile-bio-inner">
							{{search.bio}}
						</div>
					</div>
		<div class="profile-extra-info">
			<div class="profile-extra-inner">
				<ul>
					<li>
						<div class="profile-ex-location-i">
							<i class="fa fa-map-marker" aria-hidden="true"></i>
						</div>
						<div class="profile-ex-location">
							{{country}}
						</div>
					</li>
					<li>
						<div class="profile-ex-location-i">
							<i class="fa fa-link" aria-hidden="true"></i>
						</div>
						<div class="profile-ex-location">
							<a href="#">{{website}} </a>
						</div>
					</li>
					<li>
						<div class="profile-ex-location-i">
							<i class="fa fa-calendar-o" aria-hidden="true"></i>
						</div>
						<div class="profile-ex-location">
							Joined September 2014
						</div>
					</li>
					<li>
						<div class="profile-ex-location-i">
							<i class="fa fa-tint" aria-hidden="true"></i>
						</div>
						<div class="profile-ex-location">
							Born on September 30, 1991 
						</div>
					</li>
				</ul>						
			</div>
		</div>
		
		<div class="profile-extra-footer">
			<div class="profile-extra-footer-head">
				<div class="profile-extra-info">
					<ul>
						<li>
							<div class="profile-ex-location-i">
								<i class="fa fa-camera" aria-hidden="true"></i>
							</div>
							<div class="profile-ex-location">
								<a href="#">1 Photos and videos </a>
							</div>
						</li>
					</ul>
				</div>
			</div>
			<div class="profile-extra-footer-body">
				<ul>
					  <li><img src="#"/></li>
				</ul>
			</div>
			
				<!-- whoToFollow -->

				<!-- Trends -->
		</div>
		
	</div>
		<!--PROFILE INFO INNER END-->
		</div>
		<!--PROFILE INFO WRAPPER END-->
		

		<div class="popupTweet">
				   	{% for tweets in tweet %} 
			<div class="all-tweet">
<div class="t-show-wrap">	
 <div class="t-show-inner">
	<div class="t-show-popup">
		<div class="t-show-head">
			<div class="t-show-img">
				<img src="{{profileImage}}"/>
			</div>
			<div class="t-s-head-content">
				<div class="t-h-c-name">
					<span><a href="PROFILE-LINK">{{screenName}}</a></span>
					<span>@USERNAMAE</span>
					<span>{{tweets['postedOn']}}</span>
				</div>
				<div class="t-h-c-dis">
				{{tweets['status']}}
				</div>
			</div>
		</div>
	
		<div class="t-show-body">
		  <div class="t-s-b-inner">
		   <div class="t-s-b-inner-in">
		     <img src="{{tweetImage}}" class="imagePopup"/>
		   </div>
		  </div>
		</div>
		
	</div>
	<div class="t-show-footer">
		<div class="t-s-f-right">
			<ul> 
			<li><button><a href="#"><i class="fa fa-share" aria-hidden="true"></i></a></button></li>	
				<li><button  name="retweet"class="retweet" data-tweet={{tweets['tweeID']}} data-user={{tweets['tweetBy']}} ><i class="fa fa-retweet" aria-hidden="true"></i><span class='retweetsCount'></span></button></li>
				<li><button  class="likeBtn" data-tweet={{tweets['tweetID']}} data-user={{tweets['tweetBy']}}><i class="fa fa-heart-o" aria-hidden="true"></i><span class="likeCount"></span></button></li>
					<li>
					<a href="#" class="more"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
					<ul> 
					  <li><label class="deleteTweet"  data-tweet={{tweets['tweetID']}} data-user={{tweets['tweetBy']}} name="deleteTweet"class="deleteTweet">Delete Tweet</label></li>
					</ul>
				</li>
			</ul>
		</div>
	</div>
</div>
</div>
</div>
			   {% endfor %}
		</div>
		</div>
		<!-- in left wrap-->
	</div>
	<!-- in left end-->
		<!--FOLLOWING OR FOLLOWER FULL WRAPPER-->
		<div class="wrapper-following">
			<div class="wrap-follow-inner">
              Following list
			</div><!-- wrap follo inner end-->
		</div><!--FOLLOWING OR FOLLOWER FULL WRAPPER END-->

	</div><!--in full wrap end-->
</div>
<!-- in wrappper ends-->

</div><!-- ends wrapper -->


{% endblock %}